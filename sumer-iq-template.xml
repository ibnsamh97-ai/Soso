      .contact-card{display:grid;gap:1rem;background:rgba(47,45,42,.04);border-radius:var(--border-radius);padding:1.25rem;border:1px solid rgba(47,45,42,.08)}
      [data-theme='dark'] .contact-card{background:rgba(244,244,244,.05);border-color:rgba(244,244,244,.08)}
      .contact-card form{display:grid;gap:.75rem}
      .contact-card input,.contact-card textarea{padding:.75rem 1rem;border-radius:var(--border-radius);border:1px solid var(--color-muted);background:rgba(255,255,255,.8)}
