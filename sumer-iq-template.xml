      @media(max-width:992px){main{grid-template-columns:1fr}nav{display:none}.mobile-nav{display:flex;justify-content:center;margin:.5rem 0}.mobile-nav select{padding:.6rem 1rem;border-radius:999px;border:1px solid var(--color-muted)}}
      @media(max-width:600px){.top-bar{flex-direction:column;gap:.75rem;text-align:center}.logo-area h1{font-size:1.6rem}header{position:fixed;width:100%}main{margin-top:calc(var(--header-height) + 2.5rem)}}
